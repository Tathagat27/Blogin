<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Blog Page</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-5">
      <h1> <%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="50%" height="30%"/>
      <pre class="mt-5"><%= blog.body %></pre>
    </div>

    <div class="container mt-4 mb-5">
        <img src="<%= blog.createdBy.profileImageURL %>" width="40px" />
        <b><%= blog.createdBy.fullName %></b>
    </div>

    <div class="container mt-3">
      <h2>Comments (<%= comments.length %>)</h2>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">

          <div class="mb-3" style="display: flex;">
            <img src="<%= user.profileImageURL %>" width="40px" style="margin-right: 5px;"/>
            <input type="text" class="form-control" name="content" aria-describedby="emailHelp" placeholder="Add a comment..." style="flex: 1;" />
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
      
        </form>

        <% } else { %>
          <h6>Login first to Add your Comment.</h6>
      <% } %>      
      
      <div class="mt-3">
        <hr/>
        <% comments.forEach(comment => { %>
          <div style="margin: 0 4rem;">
            <img src="<%= comment.createdBy.profileImageURL %>" width="40px" />
            <small style="color: grey; margin: 0 5px 0 2px;"><%= comment.createdBy.fullName %></small>
            
              <%= comment.content %>
          <hr/>
          </div>
          
        <% }) %>
      </div>

    </div>
       

    <%- include('./partials/script.ejs') %>
  </body>
</html>
